@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --foreground-rgb: 0, 0, 0;
  --background-start-rgb: 214, 219, 220;
  --background-end-rgb: 255, 255, 255;
}

body {
  @apply bg-slate-50 text-slate-900 font-sans;
}

.glass {
  @apply bg-white/70 backdrop-blur-md border border-white/20 shadow-xl;
}

.btn-primary {
  @apply bg-accent text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-all active:scale-95;
}
